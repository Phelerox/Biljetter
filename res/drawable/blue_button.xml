<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape android:shape="rectangle">
			<gradient
				android:startColor="#FFF7C484"
				android:centerColor="#FFCE7676"
				android:endColor="#FFBE6666"
				android:angle="270"/>
			<stroke
				android:width="1dp"
				android:color="#A0000000"/>
			<padding
				android:top="8dp"
				android:bottom="8dp"
				android:left="5dp"
				android:right="5dp"/>
			<corners
				android:radius="7dp"/>
		</shape>
	</item>
	<item android:state_focused="true">
		<shape android:shape="rectangle">
			<gradient
				android:startColor="#FFF7F4B4"
				android:centerColor="#FFCEA6A6"
				android:endColor="#FFBE9696"
				android:angle="270"/>
			<stroke
				android:width="1dp"
				android:color="#A0000000"/>
			<padding
				android:top="8dp"
				android:bottom="8dp"
				android:left="5dp"
				android:right="5dp"/>
			<corners
				android:radius="7dp"/>
		</shape>
	</item>
	<item android:state_enabled="false" android:color="@color/grey">
		<shape android:shape="rectangle">
			<gradient
				android:startColor="#FFF7F7F7"
				android:centerColor="#FFCECFCE"
				android:endColor="#FFBEBEBE"
				android:angle="270"/>
			<stroke
				android:width="1dp"
				android:color="#A0000000"/>
			<padding
				android:top="8dp"
				android:bottom="8dp"
				android:left="5dp"
				android:right="5dp"/>
			<corners
				android:radius="7dp"/>
		</shape>
	</item>
	<item>
		<shape android:shape="rectangle" android:color="@color/black">
			<gradient
				android:startColor="#FFF7F7F7"
				android:centerColor="#FFCECFCE"
				android:endColor="#FFBEBEBE"
				android:angle="270"/>
			<stroke
				android:width="1dp"
				android:color="#A0000000"/>
			<padding
				android:top="8dp"
				android:bottom="8dp"
				android:left="5dp"
				android:right="5dp"/>
			<corners
				android:radius="7dp"/>
		</shape>
	</item>
</selector>
