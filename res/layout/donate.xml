<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:paddingLeft="4sp"
	android:paddingRight="4sp">
	
	<TextView android:id="@+id/header"
		android:text="Donera"
		android:textSize="25sp"
		android:textStyle="bold"
		android:textColor="@color/white"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:paddingBottom="9sp"
		android:layout_alignParentTop="true" />
		
	<TextView 
		android:text="Det skulle uppskattas jättemycket ifall ni vill donera några kronor för att visa er uppskattning av appen.\n\nTack på förhand! &lt;3"
		android:textSize="20sp"
		android:textColor="@color/white"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_gravity="top|center_horizontal"
		android:paddingBottom="9sp"	/>
		
	<Button android:id="@+id/btnFlattr"
		android:text="Donera genom Flattr."
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:drawableLeft="@drawable/donate_flattr"
        android:drawablePadding="15sp"
		android:gravity="left|center_vertical" />

</LinearLayout>
