<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:paddingLeft="4sp"
	android:paddingRight="4sp">

	<ScrollView
		android:layout_height="fill_parent"
		android:layout_width="fill_parent">
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">

			<TextView android:id="@+id/txtDescription"
				android:text="@string/About_description"
				android:textSize="20sp"
				android:textColor="@color/white"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:layout_gravity="top|center_horizontal"
				android:paddingBottom="9sp"
				android:linksClickable="true" />

			<Button android:id="@+id/btnGitHub"
				style="?button"
				android:text="@string/About_btnGitHub"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:drawableLeft="@drawable/blacktocat"
				android:drawablePadding="15sp"
				android:gravity="left|center_vertical" />

			<Button android:id="@+id/btnFlattr"
				style="?button"
				android:text="@string/About_btnFlattr"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:drawableLeft="@drawable/donate_flattr"
				android:drawablePadding="15sp"
				android:gravity="left|center_vertical" />

			<Button android:id="@+id/btnWizard"
				style="?button"
				android:text="@string/About_btnWizard"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:drawableLeft="@drawable/changelog_icon"
				android:drawablePadding="15sp"
				android:gravity="left|center_vertical" />

			<TextView android:id="@+id/txtVersion"
				android:textSize="15sp"
				android:textColor="@color/white"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:gravity="right|center_vertical" />
		</LinearLayout>
	</ScrollView>
</LinearLayout>
