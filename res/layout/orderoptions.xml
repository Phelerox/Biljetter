<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout android:id="@+id/header"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<ImageView android:id="@+id/companylogo"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:scaleType="fitXY" />

		<TextView android:id="@+id/companyname"
			android:textSize="22sp"
			android:textStyle="bold"
			android:textColor="@color/white"
			android:layout_alignParentRight="true"
			android:layout_height="fill_parent"
			android:layout_width="wrap_content"
			android:gravity="center_vertical|left"
			android:paddingLeft="5sp" />
	</LinearLayout>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:paddingLeft="4sp"
		android:paddingRight="4sp">
		<TextView
			android:text="@string/OrderOptions_area"
			android:textSize="18sp"
			android:textStyle="bold"
			android:textColor="@color/white"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent" />

		<Spinner android:id="@+id/spnArea"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" />

		<TextView android:id="@+id/txtAreaDescription"
			android:textColor="@color/white"
			android:textSize="15sp"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:paddingLeft="6sp"
			android:paddingRight="6sp" />

		<TextView
			android:text="@string/OrderOptions_type"
			android:textSize="18sp"
			android:textStyle="bold"
			android:textColor="@color/white"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent" />

		<Spinner android:id="@+id/spnType"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" />

		<TextView android:id="@+id/txtTypeDescription"
			android:textColor="@color/white"
			android:textSize="15sp"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:paddingLeft="6sp"
			android:paddingRight="6sp" />

		<Button android:id="@+id/btnSend"
			style="?button"
			android:text="@string/OrderOptions_send"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" />
	</LinearLayout>
</LinearLayout>
