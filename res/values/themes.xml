<?xml version="1.0" encoding="utf-8"?>
<resources>
	<attr name="button" format="reference" />
	<attr name="checkbox" format="reference" />
	
	<style name="Theme" parent="android:Theme">
		<item name="android:windowTitleSize">20dip</item>
	</style>

	<style name="Theme.Blue">
		<!-- hide the Window Title -->
		<item name="android:windowBackground">@color/black</item>
		<item name="button">@style/blue_button</item>
		<item name="checkbox">@style/blue_checkbox</item>
	</style>

	<style name="blue_button">
		<item name="android:background">@drawable/blue_button</item>
		<item name="android:layout_margin">3sp</item>
		<item name="android:textSize">20sp</item>
	</style>
	
	<style name="blue_checkbox">
		<item name="android:textSize">18sp</item>
	</style>
</resources>
