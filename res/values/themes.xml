<?xml version="1.0" encoding="utf-8"?>
<resources>
	<attr name="header" format="reference" />
	<attr name="button" format="reference" />
	<attr name="checkbox" format="reference" />
	
	<style name="Theme" parent="android:Theme">
		<item name="android:windowTitleSize">20dip</item>
	</style>

	<style name="Theme.Black">
		<!-- hide the Window Title -->
		<item name="android:windowNoTitle">true</item>
		<item name="header">@style/black_header</item>
		<item name="button">@style/black_button</item>
		<item name="checkbox">@style/black_checkbox</item>
	</style>

	<style name="black_header">
		<item name="android:textSize">25sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:paddingBottom">9sp</item>
		<item name="android:layout_alignParentTop">true</item>
	</style>

	<style name="black_button">
		<item name="android:background">@drawable/black_button</item>
		<item name="android:layout_margin">3sp</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">#000000</item>
	</style>
	
	<style name="black_checkbox">
		<item name="android:textSize">18sp</item>
	</style>
</resources>
